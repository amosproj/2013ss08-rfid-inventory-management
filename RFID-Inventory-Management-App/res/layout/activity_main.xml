<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:textColor="#fb3d09"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="RFID Scanner" />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#fb3d09"
        android:textStyle="bold"
        android:id="@+id/textViewConnectedStatus" />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#fb3d09"
        android:textStyle="bold"
        android:id="@+id/textViewStatus" />
    
    <Button
        android:id="@+id/buttonStartStopScanning"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start scanning" 
        android:onClick="startStopButtonClick" />

    <TextView
		android:id="@+id/textViewScannedTags"
		android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scanned tag IDs:" 
        android:visibility="invisible" />
    
    <ListView
        android:id="@+id/listViewScannedTags"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:choiceMode="multipleChoice" 
        android:visibility="invisible"
        android:background="@drawable/border_ui" 
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:id="@+id/linearLayoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:visibility="invisible" >

         <LinearLayout
            android:id="@+id/linearLayoutLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/textViewLocation"
				android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="Select your Location:" />

            <Spinner
                android:id="@+id/spinnerLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
                android:layout_weight="1.4"
                android:text="Select your Room:" />

            <Spinner
                android:id="@+id/spinnerRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewEmployee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
				android:layout_gravity="center_vertical"
                android:layout_weight="1.4"
                android:text="Select your Name:" />

            <Spinner
                android:id="@+id/spinnerEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Save" 
            android:onClick="saveButtonClick"/>
    </LinearLayout>
</LinearLayout>